{
    "name": "@hxo/vscode",
    "displayName": "HXO Language Support",
    "description": "VS Code extension for HXO framework",
    "version": "0.1.0",
    "publisher": "hxo",
    "type": "module",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./dist/index.cjs",
    "activationEvents": [
        "onLanguage:hxo"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "HXO",
            "properties": {
                "hxo.lsp.path": {
                    "type": "string",
                    "default": "hxo-lsp",
                    "description": "Path to the hxo-lsp executable."
                },
                "hxo.lsp.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the hxo-lsp server."
                }
            }
        },
        "languages": [
            {
                "id": "hxo",
                "aliases": [
                    "HXO",
                    "hxo"
                ],
                "extensions": [
                    ".hxo"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "hxo",
                "scopeName": "source.hxo",
                "path": "./syntaxes/hxo.tmLanguage.json",
                "embeddedLanguages": {
                    "source.ts": "typescript",
                    "source.css": "css"
                }
            }
        ]
    },
    "scripts": {
        "build": "rolldown -c rolldown.config.js",
        "dev": "rolldown -c rolldown.config.js --watch",
        "test": "vitest"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/vscode": "^1.75.0",
        "typescript": "^5.0.0",
        "rolldown": "latest"
    }
}
